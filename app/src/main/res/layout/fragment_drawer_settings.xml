<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.sharesmile.share.views.MLTextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:minHeight="100dp"
            android:textColor="@color/MontserratRegular"
            android:visibility="gone"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/reminder_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <com.sharesmile.share.views.MLTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:text="@string/settings_reminders"
                android:textColor="@color/MontserratRegular"
                android:textSize="16sp"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/greyish_brown_two"
                tools:text="06:00 AM"
                android:id="@+id/tv_reminder_time"
                />
            <Switch
                android:id="@+id/notif_toggle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <com.sharesmile.share.views.MLTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:text="@string/settings_voice_updates"
                android:textColor="@color/MontserratRegular"
                android:textSize="16sp"/>
            <Switch
                android:id="@+id/notif_voice_updates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>

        <com.sharesmile.share.views.MLTextView
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/rate_us"
            android:textColor="@color/MontserratRegular"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <com.sharesmile.share.views.MLTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:gravity="center_vertical"
                android:text="@string/settings_currency"
                android:textColor="@color/MontserratRegular"
                android:textSize="16sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/currency_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/settings_spinner_background"
                android:layout_weight="3.7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <com.sharesmile.share.views.MLTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:gravity="center_vertical"
                android:text="@string/settings_measurement"
                android:textColor="@color/MontserratRegular"
                android:textSize="16sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/measurement_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/settings_spinner_background"
                android:layout_weight="3.7"/>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <com.sharesmile.share.views.MLTextView
                android:id="@+id/tv_set_reminder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/settings_reminder"
                android:textColor="@color/MontserratRegular"
                android:textSize="16sp"
                android:background="@drawable/bg_my_stats_weekly"
                android:layout_alignParentLeft="true"/>

            <com.sharesmile.share.views.MLTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/MontserratRegular"
                android:textSize="16sp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <com.sharesmile.share.views.MLTextView
            android:id="@+id/tos"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Terms Of Services"
            android:visibility="gone"
            android:textColor="@color/MontserratRegular"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <com.sharesmile.share.views.MLTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:text="GPS speed updates"
                android:textColor="@color/MontserratRegular"
                android:textSize="16sp"/>
            <Switch
                android:id="@+id/gps_speed_updates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
        </LinearLayout>

        <com.sharesmile.share.views.MLTextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/logout"
            android:textColor="@color/MontserratRegular"
            android:textSize="16sp" />

    </LinearLayout>

    <com.sharesmile.share.views.MLTextView
        android:id="@+id/tv_app_version"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:text="App Version"/>


</RelativeLayout>


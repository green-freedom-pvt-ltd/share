<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_stats_container"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/leagueboard_banner_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sharesmile.share.views.LRTextView
            android:id="@+id/total_raised_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/black_64"
            android:text="@string/total_meals_shared_so_far" />

        <com.sharesmile.share.views.LBKTextView
            android:id="@+id/tv_banner_total_impact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="57,438"
            android:textColor="@color/black_57"
            android:textSize="36sp" />
    </LinearLayout>

    <com.sharesmile.share.views.LRTextView
        android:id="@+id/ends_in_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center|top"
        android:textColor="@color/black_64"
        android:text="@string/total_raised"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="22dp"
            android:id="@+id/share_code_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/refer_code_bg_blue">

            <com.sharesmile.share.views.LBTextView
                android:id="@+id/share_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="12dp"
                android:text="NIKHI98564"
                android:textColor="@color/bright_sky_blue"
                android:textSize="12.3sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/refer_code_share_blue_bg"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_share_white_24px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
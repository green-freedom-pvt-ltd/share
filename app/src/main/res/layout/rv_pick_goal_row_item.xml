<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    >
    <LinearLayout
        android:id="@+id/goal_row"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
<com.sharesmile.share.views.LBRadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="Casual"
    android:paddingLeft="27dp"
    android:textColor="@color/black_64"
    android:fontFamily="@font/lato_bold"
    android:id="@+id/goal_name"
    android:clickable="false"
    />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goal_streak_icons"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        >

    </LinearLayout>
    <com.sharesmile.share.views.LRTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_64"
        android:layout_weight="1"
        android:gravity="right"
        android:text="1km per day"
        android:id="@+id/goal_streak_distance"
        />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/league_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_weight="1.35"
        android:background="@color/pale_grey"
        android:orientation="vertical">

        <com.sharesmile.share.views.MLTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/registation_text"
            android:textColor="@color/purplish_brown"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_drop"
            android:layout_marginTop="24dp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_drop"
            android:layout_marginTop="24dp" />

        <com.sharesmile.share.views.MLButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="22dp"
            >
            <com.sharesmile.share.views.CircularImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_pencil_edit_white"
                android:background="@drawable/rounded_circle_blue"
                android:padding="6dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
        <com.sharesmile.share.views.LRTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRST NAME"
            style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_first_name_error"
                />
        </LinearLayout>
        <com.sharesmile.share.views.LREditText
            android:id="@+id/et_profile_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            style="@style/edit_profile_text_style_value"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST NAME"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_last_name_error"
                />
        </LinearLayout>

        <com.sharesmile.share.views.LREditText
            android:id="@+id/et_profile_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            style="@style/edit_profile_text_style_value"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE 1"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_title_1_error"
                />
        </LinearLayout>

        <com.sharesmile.share.views.LREditText
            android:id="@+id/et_profile_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            style="@style/edit_profile_text_style_value"
            android:textColor="@color/black_38"/>
        <Spinner
            android:id="@+id/spinner_profile_title1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE 2"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_title_2_error"
                />
        </LinearLayout>

        <com.sharesmile.share.views.LREditText
            android:id="@+id/et_profile_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            style="@style/edit_profile_text_style_value"
            android:textColor="@color/black_38"/>
        <Spinner
            android:id="@+id/spinner_profile_title2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_email_error"
                />
        </LinearLayout>

        <com.sharesmile.share.views.LREditText
            android:id="@+id/et_profile_general_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            style="@style/edit_profile_text_style_value"
            android:textColor="@color/black_38"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NUMBER"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_phone_number_error"
                />
        </LinearLayout>

        <com.sharesmile.share.views.LREditText
            android:id="@+id/et_profile_general_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            style="@style/edit_profile_text_style_value" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BODY WEIGHT IN KGs"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_body_weight_error"
                />
        </LinearLayout>

        <com.sharesmile.share.views.LREditText
            android:id="@+id/et_body_weight_kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            style="@style/edit_profile_text_style_value"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIRTHDAY"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_birthday_error"
                />
        </LinearLayout>

        <com.sharesmile.share.views.LRTextView
            android:id="@+id/et_profile_general_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DD-MM-YYYY"
            style="@style/edit_profile_text_style_value" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER"
                style="@style/edit_profile_text_style_label"/>
            <com.sharesmile.share.views.LRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/edit_profile_error_text_style_label"
                android:id="@+id/tv_edit_profile_gender_error"
                />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_share_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Male"
                android:textColor="@color/black_separator"
                android:fontFamily="@font/Lato-Regular"
                android:textSize="14sp"
                android:button="@drawable/edit_profile_gender_radio_selector"
                android:paddingStart="10dp"
                />

            <RadioButton
                android:id="@+id/rb_share_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:checked="false"
                android:text="Female"
                android:textColor="@color/black_separator"
                android:fontFamily="@font/Lato-Regular"
                android:textSize="14sp"
                android:button="@drawable/edit_profile_gender_radio_selector"
                android:paddingStart="10dp"
                />
        </RadioGroup>


    </LinearLayout>

</ScrollView>


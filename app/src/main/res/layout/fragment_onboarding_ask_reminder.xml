<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPaddingBottom="2dp"
            app:contentPaddingTop="2dp"
            app:contentPaddingLeft="2dp"
            app:contentPaddingRight="2dp"
            >
            <LinearLayout
                android:id="@+id/yes_layout"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sharesmile.share.views.LBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/yes_that_will_help"
                    android:textColor="@color/black_64"
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/yes"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/radio_unselected"
                    android:drawablePadding="17dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPaddingBottom="2dp"
            app:contentPaddingTop="2dp"
            app:contentPaddingLeft="2dp"
            app:contentPaddingRight="2dp"
            >
            <LinearLayout
                android:id="@+id/no_layout"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sharesmile.share.views.LBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/no_i_dont_want_reminder"
                    android:textColor="@color/black_64"
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/no"
                    android:layout_weight="1"
                    android:drawablePadding="17dp"
                    android:drawableLeft="@drawable/radio_unselected"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/onboarding_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            >
        <com.sharesmile.share.views.LBTextView
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            style="@style/onboarding_title"
            tools:text="@string/set_reminder_for_daily_jog_walk"
            android:id="@+id/onboarding_question_tv"
            android:layout_weight="0.1"
            android:gravity="center|bottom"
            />
            <LinearLayout
                android:id="@+id/progress_lt"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.1"
                android:gravity="center"
                >
        <FrameLayout
            android:layout_below="@+id/onboarding_question_tv"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rectangle_grey"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:id="@+id/level_progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded_rectangle_blue_green_gradient"></View>

            </LinearLayout>
        </FrameLayout>
            </LinearLayout>
        <FrameLayout
            android:id="@+id/main_frame_layout_onboarding"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_below="@+id/onboarding_question_tv"
            android:layout_weight="0.8"
            />
        </LinearLayout>
        <com.sharesmile.share.views.MSBTextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/back_txt"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.sharesmile.share.views.LRTextView
            android:id="@+id/screen_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/continue_tv"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="29dp"
            android:text="@string/weight_required_for"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.sharesmile.share.views.MSBTextView
            android:id="@+id/continue_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/continue_txt"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
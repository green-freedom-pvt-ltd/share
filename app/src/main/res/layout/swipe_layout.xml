<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.46">

                <ImageView
                    android:id="@+id/img_run"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cause_sample" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:alpha="0.74">

                    <com.sharesmile.share.views.MLTextView
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cause_type"
                        android:textColor="@color/greyish_brown_two"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.54"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.sharesmile.share.views.MSBTextView
                    android:id="@+id/run_screen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="33"
                    android:paddingTop="11dp"
                    android:text="Sponsor a Child, Foster a Future!"
                    android:textColor="@color/greyish_brown_two"
                    android:textSize="17sp" />

                <com.sharesmile.share.views.MRTextView
                    android:id="@+id/run_screen_sponsor"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="18"
                    android:paddingTop="2dp"
                    tools:text="by Shwas Foundation"
                    android:textColor="@color/warm_grey_three"
                    android:textSize="12sp" />

                <com.sharesmile.share.views.MRTextView
                    android:id="@+id/run_screen_description"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="64"
                    android:paddingTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="@string/mini_description"
                    android:textColor="@color/greyish_brown_two"
                    android:textSize="11.5sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="23"
                    android:paddingTop="5dp">

                    <com.sharesmile.share.views.MRTextView
                        android:id="@+id/amount_raised_rupees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raised ` 2,54,921"
                        android:textColor="@color/greyish_brown_two"
                        android:textSize="12sp" />

                    <com.sharesmile.share.views.MRTextView
                        android:id="@+id/amount_raised_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54%"
                        android:textColor="@color/greyish_brown_two"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    android:paddingTop="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_rectangle_grey">
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:id="@+id/amount_raised_progress_bar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_rectangle_blue_gradient"
                            android:layout_weight="0.1">
                        </View>

                    </LinearLayout>

                </FrameLayout>

                <com.sharesmile.share.views.MRTextView
                    android:id="@+id/num_impact_runs"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="24"
                    android:paddingTop="10dp"
                    android:text="15,492 ImpactRuns"
                    android:textColor="@color/greyish_brown_two"
                    android:textSize="11.5sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_cause"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.47"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_thankyou_image" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.53"
                android:orientation="vertical"
                android:padding="5dp">

                <com.sharesmile.share.views.LBKTextView
                    android:id="@+id/tv_cause_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_64"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginBottom="2dp"
                    />

                <com.sharesmile.share.views.LRTextView
                    android:id="@+id/tv_cause_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="with Impact Foundation"
                    android:textColor="@color/black_38"
                    android:textSize="9sp" />

                <LinearLayout
                    android:id="@+id/layout_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp">

                    <com.sharesmile.share.views.LBTextView
                        android:id="@+id/tv_charity_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="1230"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="vertical">

                        <com.sharesmile.share.views.LBTextView
                            android:id="@+id/tv_charity_workout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="571"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <com.sharesmile.share.views.LBTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WORKOUTS"
                            android:textColor="@color/black_38"
                            android:textSize="7sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
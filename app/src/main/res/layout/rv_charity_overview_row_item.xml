<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:id="@+id/empty_view_top"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_cause"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_thankyou_image" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <com.sharesmile.share.views.LBKTextView
                    android:id="@+id/tv_cause_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_64"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginBottom="2dp"
                    />

                <com.sharesmile.share.views.LRTextView
                    android:id="@+id/tv_cause_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="with Impact Foundation"
                    android:textColor="@color/black_38"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/layout_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.sharesmile.share.views.LBTextView
                        android:id="@+id/tv_charity_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="1230"
                        android:textColor="@color/black_64"
                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:orientation="vertical"
                        >

                        <com.sharesmile.share.views.LBTextView
                            android:id="@+id/tv_charity_workout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="571"
                            android:textColor="@color/black_64"
                            android:textSize="12sp" />

                        <com.sharesmile.share.views.LBTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WORKOUTS"
                            android:textColor="@color/black_38"
                            android:textSize="7sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:id="@+id/empty_view_bottom"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">
    <com.sharesmile.share.views.LBTextView
        android:id="@+id/welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="36sp"
        android:layout_marginTop="22dp"
        android:textColor="@color/clr_cb050505"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/invite_layout"
        android:layout_below="@+id/welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="26dp">
    <com.sharesmile.share.views.LRTextView
        android:id="@+id/invited_by_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_have_been_invited_by"
        android:textColor="@color/clr_cb050505"
        android:textSize="14sp"
        />
    <com.sharesmile.share.views.LBTextView
        android:id="@+id/invited_by_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invited_by_text"
        tools:text="Nikhil Khandelwal"
        android:textColor="@color/clr_cb050505"
        android:textSize="14sp"
        />
    </LinearLayout>
    <com.sharesmile.share.views.LRTextView
        android:id="@+id/change_maker_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_layout"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:text="@string/life_as_change_maker"
        android:textColor="@color/clr_cb050505"
        android:textSize="14sp"
        />
    <com.sharesmile.share.views.LRTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_maker_tv"
        android:text="@string/every_step"
        android:textColor="@color/clr_cb050505"
        android:textSize="14sp"
        android:id="@+id/change_maker_tv_2"
        />

    <RelativeLayout
        android:id="@+id/referral_code_layout"
        android:layout_below="@+id/change_maker_tv_2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/referral_code_til"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginStart="-4dp"
            android:theme="@style/EditTextHint"
            android:layout_centerVertical="true">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/referral_code_et"
                android:hint="Have a referral code?"
                android:fontFamily="@font/lato_regular"
                app:backgroundTint="@color/light_blue"
                android:textColorHint="@color/light_blue"
                android:textSize="14sp"
                android:textColor="@color/clr_cb050505"

                />
        </android.support.design.widget.TextInputLayout>

        <com.sharesmile.share.views.MSBTextView
            android:id="@+id/submit_referral_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/continue_txt"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/referral_progress_bar"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
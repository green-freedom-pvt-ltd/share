<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/greenboard"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_a_meal_challenge_title"
            android:fontFamily="@font/chalkduster"
            android:textSize="20sp"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="16sp"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/powered_by_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/powered_by"
            android:fontFamily="@font/chalkduster"
            android:textSize="10sp"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:layout_below="@+id/header"
            android:textColor="@color/white"

            />

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bacha_plate"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_marginTop="-2dp"
            android:id="@+id/share_code_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/refer_code_bg"
            android:layout_marginBottom="22dp">

            <com.sharesmile.share.views.LBTextView
                android:id="@+id/share_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="12dp"
                android:text="NIKHI98564"
                android:textColor="@color/white"
                android:textSize="12.3sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/refer_code_share_bg"
                android:padding="11dp"
                app:srcCompat="@drawable/ic_share_green_24px" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/img_run"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:alpha="0.74">

                    <com.sharesmile.share.views.LRTextView
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cause_type"
                        android:textColor="@color/greyish_brown_two"
                        android:textSize="@dimen/text_size_12sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:paddingBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    />
                <com.sharesmile.share.views.LBKTextView
                    android:id="@+id/run_screen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="13"
                    android:text="Sponsor a Child, Foster a Future! askkmdsdlkfj"
                    android:textColor="@color/greyish_brown_two"
                    android:textSize="@dimen/text_size_18sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <com.sharesmile.share.views.LRTextView
                    android:id="@+id/run_screen_sponsor"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    tools:text="by Shwas Foundation"
                    android:textColor="@color/warm_grey_three"
                    android:textSize="10sp"
                    />

                <com.sharesmile.share.views.LRTextView
                    android:id="@+id/run_screen_description"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/mini_description"
                    android:textColor="@color/black_64"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:paddingTop="2dp">

                    <com.sharesmile.share.views.LBTextView
                        android:id="@+id/amount_remaining_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54% Remaining"
                        android:textColor="@color/greyish_brown_two"
                        android:layout_alignParentRight="true"
                        android:textSize="8sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:paddingTop="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_rectangle_grey">
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:id="@+id/amount_raised_progress_bar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_rectangle_blue_green_gradient"
                            android:layout_weight="0.3">
                        </View>

                    </LinearLayout>

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="21"
                    android:clipChildren="false"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:clipChildren="false"
                        android:layout_centerVertical="true"
                        >

                        <com.sharesmile.share.views.LBTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/impact_runs"
                            android:textSize="8sp"
                            android:textColor="@color/greyish_brown_two"/>

                        <com.sharesmile.share.views.LBTextView
                            android:id="@+id/num_impact_runs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15,492"
                            android:textColor="@color/greyish_brown_two"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        >

                        <com.sharesmile.share.views.LBTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cause_goal"
                            android:textSize="8sp"
                            android:textColor="@color/greyish_brown_two"/>

                        <com.sharesmile.share.views.LBTextView
                            android:id="@+id/tv_goal_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4,00,000"
                            android:textColor="@color/greyish_brown_two"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cause_completed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPaddingBottom="2dp"
        app:contentPaddingTop="2dp"
        app:contentPaddingLeft="2dp"
        app:contentPaddingRight="2dp"
        >
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/goal_row"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="Casual"
    android:paddingLeft="27dp"
    android:textColor="@color/black_64"
    android:fontFamily="@font/lato_bold"
    android:id="@+id/goal_name"
    android:layout_weight="1"
    />
    <com.sharesmile.share.views.LRTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_64"
        android:gravity="right"
        android:text="1km per day"
        android:id="@+id/goal_streak_distance"
        />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/charity_overview_card"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <com.sharesmile.share.views.LBTextView
                android:id="@+id/tv_charity_category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:text="Women Empowerment"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="@color/white"

                />

            <ImageView
                android:id="@+id/iv_charity_overview"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:src="@drawable/placeholder_thankyou_image"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_corner_white_bg"
                android:padding="10dp">

                <com.sharesmile.share.views.LBTextView
                    android:id="@+id/tv_charity_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/black"
                    android:textSize="15sp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:id="@+id/star_layout"
                    >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
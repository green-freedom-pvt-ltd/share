<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/workout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll_profile_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/stats_sharable_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    >

                    <com.sharesmile.share.views.CircularImageView
                        android:id="@+id/img_profile_stats"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="11dp"
                        android:scaleType="fitCenter" />

                    <com.sharesmile.share.views.LBKTextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:maxLines="2"
                        android:textColor="@color/black_64"
                        android:textSize="20sp"
                        tools:text="Ankit Maheshwari" />

                    <com.sharesmile.share.views.LBTextView
                        android:id="@+id/tv_profile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:maxLines="2"
                        android:textColor="@color/black_64"
                        android:textSize="12sp"
                        tools:text="EDUCATION MASTER, CAPTAIN PLANET" />

                    <com.sharesmile.share.views.MSBTextView
                        android:id="@+id/tv_impact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u20B9 657"
                        android:textColor="@color/orange"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:gravity="center">

                            <com.sharesmile.share.views.LBTextView
                                android:id="@+id/tv_streak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/streak_icon"
                                android:drawablePadding="5dp"
                                tools:text="18"
                                android:textColor="@color/streak_orange"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:padding="5dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.01"
                            android:background="@color/grey_f2"
                            ></LinearLayout>
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.74"
                            android:gravity="center"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <com.sharesmile.share.views.LBTextView
                                        android:id="@+id/tv_level_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:text="Level 3"
                                        android:textColor="@color/black_54"
                                        android:textSize="11sp" />

                                    <com.sharesmile.share.views.LRTextView
                                        android:id="@+id/tv_level"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:text="500km"
                                        android:textColor="@color/black_53"
                                        android:textSize="9sp" />
                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="7dp"
                                    android:layout_marginTop="3dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/rounded_rectangle_grey"></RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <View
                                            android:id="@+id/level_progress_bar"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.1"
                                            android:background="@drawable/rounded_rectangle_blue_green_gradient"></View>

                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="47dp">

                        <com.sharesmile.share.views.LBTextView
                            style="@style/profile_stats_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_stats_my_stats" />

                        <LinearLayout
                            android:id="@+id/stats_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <com.sharesmile.share.views.LBTextView
                                android:id="@+id/tv_my_stats_daily"
                                style="@style/profile_stats_header_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_my_stats_daily"
                                android:text="@string/profile_stats_daily"
                                android:textColor="@color/colorPrimaryDark"/>

                            <com.sharesmile.share.views.LBTextView
                                android:id="@+id/tv_my_stats_weekly"
                                style="@style/profile_stats_header_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_my_stats_weekly"
                                android:text="@string/profile_stats_weekly"
                                android:textColor="@color/colorPrimaryDark"/>

                            <com.sharesmile.share.views.LBTextView
                                android:id="@+id/tv_my_stats_monthly"
                                style="@style/profile_stats_header_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_my_stats_monthly"
                                android:text="@string/profile_stats_monthly"
                                android:textColor="@color/colorPrimaryDark"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/overlay_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:gravity="center_vertical"

                        >

                        <com.sharesmile.share.views.MSBTextView
                            android:id="@+id/tv_stats_impact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/clr_0288aa"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:text="\u20B9 0" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="40dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <com.sharesmile.share.views.LBTextView
                                android:id="@+id/tv_stats_workout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_57"
                                android:textSize="20sp"
                                android:text="0" />

                            <com.sharesmile.share.views.LBTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_stats_workouts"
                                android:textColor="@color/clr_a0"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical">

                            <com.sharesmile.share.views.LBTextView
                                android:id="@+id/tv_stats_kms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_57"
                                android:textSize="20sp"
                                android:text="0" />

                            <com.sharesmile.share.views.LBTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_stats_kms"
                                android:textColor="@color/clr_a0"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/progress_bar_stats_graph"
                            />
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_daily"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tv_last_week"
                            android:layout_marginBottom="29dp"
                            android:layout_marginTop="12dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:visibility="invisible" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_weekly"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tv_last_week"
                            android:layout_marginBottom="29dp"
                            android:layout_marginTop="12dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:visibility="invisible" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_monthly"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tv_last_week"
                            android:layout_marginBottom="29dp"
                            android:layout_marginTop="12dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:visibility="invisible" />
                    </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_see_runs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="25dp">

                <com.sharesmile.share.views.LBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/workout_history"
                    android:textAllCaps="true"
                    android:textColor="@color/clr_32"
                    android:textSize="12sp" />

                <com.sharesmile.share.views.LBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=">"
                    android:textAllCaps="true"
                    android:textColor="@color/clr_32"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/no_workout_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >
        <com.sharesmile.share.views.CircularImageView
            android:id="@+id/img_profile_stats_2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="11dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="25dp"
            />

        <com.sharesmile.share.views.LBKTextView
            android:id="@+id/tv_profile_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:maxLines="2"
            android:textColor="@color/black_64"
            android:textSize="20sp"
            tools:text="Ankit Maheshwari" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_workout_profile"
                />
        </LinearLayout>
        <com.sharesmile.share.views.LBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/clr_5d"
            android:text="@string/no_workout_profile_txt"
            android:layout_weight="0.5"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        <LinearLayout
            android:id="@+id/btn_lets_run"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:background="@drawable/rounded_corner"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:elevation="2dp">

            <com.sharesmile.share.views.MSBTextView
                android:id="@+id/tv_lets_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/let_go"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_lets_run"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lets_go_icon"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/profile_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>